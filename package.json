{
  "name": "devdays-arcade-games",
  "productName": "Devdays-arcade-games",
  "version": "1.0.0",
  "description": "Custom Pacman and Space Invaders game",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "postinstall": "electron-builder install-app-deps",
    "build-linux": "electron-builder --linux --x64",
    "build-rpi": "electron-builder --linux --armv7l",
    "build-win": "electron-builder --windows",
    "build-mac": "electron-builder --mac",
    "release": "electron-builder --mac --windows --linux --publish always"
  },
  "author": "Deepu K Sasidharan",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.okta.devday",
    "win": {},
    "productName": "DevDay Arcade Games",
    "mac": {
      "category": "public.app-category.games"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    }
  }
}
